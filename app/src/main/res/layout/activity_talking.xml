<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.talkingActivity">


    <TextView
        android:id="@+id/tobuyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/productb"
        android:gravity="center_vertical"
        android:text="发出信息"
        android:textSize="@dimen/smallButtonHeight" />


    <ListView
        android:id="@+id/listview1"

        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/buyerto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/productb"
        android:gravity="center_vertical"
        android:text="接受信息"
        android:textSize="@dimen/inputEditTextMinHeight" />
    <ListView
        android:id="@+id/listview2"

        android:layout_width="match_parent"
        android:layout_height="300dp" />
</androidx.appcompat.widget.LinearLayoutCompat>