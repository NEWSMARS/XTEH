<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/detail_bgColor"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/p1"
                android:layout_width="351dp"
                android:layout_height="305dp" />
            <!--<ImageView-->
                <!--android:id="@+id/p1"-->
                <!--android:layout_width="355dp"-->
                <!--android:layout_height="285dp" />-->

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/bj"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fw1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名:"
                    android:textSize="@dimen/largerPadding"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/name0"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="商品名"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fw2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态:"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pcomman"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"

                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="72dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/bj"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fw3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卖家:"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shop_price"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fw4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格:"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pbuyer"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="73dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/bj"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fw5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简介:"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ishot"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="简介"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="422dp"
                android:layout_height="113dp"
                android:layout_marginLeft="0dp"
                android:background="@color/snow"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button1"
                    style="@style/bigConfirmButton"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:background="@color/base_blue"
                    android:text="联系卖家"
                    android:textColor="@color/base_black" />

                <!--<Button-->
                <!--android:id="@+id/button2"-->
                <!--style="@style/bigConfirmButton"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:text="加入购物车" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/hottext2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="近似商品"
                android:textSize="@dimen/inputEditTextMinHeight"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="311dp"
                android:layout_height="200dp"
                android:layout_marginTop="0dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ni3"
                    android:layout_width="154dp"
                    android:layout_height="159dp" />

                <ImageView
                    android:id="@+id/ni4"
                    android:layout_width="154dp"
                    android:layout_height="159dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView71"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"

                    android:textColor="@color/red"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView72"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"

                    android:textColor="@color/red"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView081"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"

                    android:textColor="@color/red"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView082"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"

                    android:textColor="@color/red"
                    android:textSize="@dimen/largerPadding"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
