<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="112dp"
            android:layout_height="104dp"
            android:src="@drawable/default_icon" />

        <TextView
            android:id="@+id/name123"
            android:layout_width="167dp"
            android:layout_height="33dp"
            android:text="TextView"
            android:textColor="@color/base_color"
            android:textSize="@dimen/bigButtonTextSize" />


    </LinearLayout>
    <View
        style="@style/line_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"></View>

    <Button
        android:id="@+id/fabushangping0"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/button123"
        android:text="发布商品"
        android:textSize="@dimen/largerPadding" />

    <Button
        android:id="@+id/fabushangping"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/button123"
        android:text="我的发布"
        android:textSize="@dimen/largerPadding" />

    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/button123"
        android:text="账号与安全"
        android:textSize="@dimen/largerPadding" />

    <Button
        android:id="@+id/myLoginButton"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/button123"
        android:text="切换用户"
        android:textSize="@dimen/largerPadding" />

    <Button
        android:id="@+id/myDeleteButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/button123"
        android:text="注销"
        android:textSize="@dimen/largerPadding" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="381dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/logo" />

</LinearLayout>